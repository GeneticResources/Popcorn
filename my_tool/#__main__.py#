from __future__ import division
from __future__ import print_function
from my_tool import sumstats
import numpy as np
import pandas as pd
import time
import sys
import argparse

def main(args):
    parser = argparse.ArgumentParser()
    parser.add_argument('-v',help='Specify output verbosity',type=int,
                        choices=[0,1,2,3])
    parser.add_argument('--sfile',help='Specify summary statistics file')
    args = parser.parse_args()

    if args.sfile is not None:
        stats = sumstats.sumstats(args)


if __name__ == '__main__':
    main(sys.argv)
